{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@/lib/*": [
                "./src/lib/*"
            ],
            "@/utils/*": [
                "./src/utils/*"
            ],
            "@/types/*": [
                "./src/types/*"
            ]
        },
        "jsx": "react-jsx",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ]
}