{
    "themeName": "Interpreter Dilemma",
    "baseStyle": {
        "fontFamily": {
            "serif": "Playfair Display",
            "sans": "Inter (System UI)",
            "mono": "Monospace"
        },
        "colors": {
            "primary": {
                "name": "Nobel Gold",
                "hex": "#C5A059",
                "variable": "--nobel-gold",
                "usage": "Accents, Highlights, Borders, Selection"
            },
            "background": {
                "main": "bg-background",
                "card": "bg-card",
                "darkSection": "#1a1a1a",
                "overlay": "radial-gradient(circle at center, ...)"
            },
            "text": {
                "primary": "text-foreground",
                "secondary": "text-muted-foreground",
                "contrast": "text-white",
                "stone": "text-stone-400"
            },
            "feedback": {
                "danger": "bg-red-50 / text-red-800",
                "success": "text-emerald-500",
                "warning": "bg-amber-500/10"
            }
        }
    },
    "typography": {
        "headers": {
            "h1": {
                "classes": "font-serif text-5xl md:text-7xl lg:text-8xl font-medium leading-tight md:leading-[1.1] drop-shadow-sm",
                "description": "Hero title"
            },
            "h2": {
                "classes": "font-serif text-4xl md:text-5xl leading-tight mb-6",
                "description": "Section headers"
            },
            "h3": {
                "classes": "font-serif text-2xl mb-2",
                "description": "Card titles"
            },
            "subtitle": {
                "classes": "text-lg md:text-xl text-muted-foreground font-light leading-relaxed",
                "description": "Hero subtitle"
            }
        },
        "labels": {
            "eyebrow": {
                "classes": "text-xs font-bold tracking-widest text-muted-foreground uppercase",
                "description": "Section labels"
            },
            "badge": {
                "classes": "px-3 py-1 border border-nobel-gold text-nobel-gold text-xs tracking-[0.2em] uppercase font-bold rounded-full",
                "description": "Special Report tag"
            }
        },
        "quotes": {
            "pullQuote": {
                "classes": "font-serif italic text-xl text-foreground mb-4",
                "container": "p-6 bg-card border border-border rounded-lg border-l-4 border-l-nobel-gold shadow-sm"
            }
        }
    },
    "components": {
        "cards": {
            "sourceCard": {
                "classes": "p-8 bg-card dark:bg-card/50 rounded-xl border border-border shadow-sm hover:shadow-md transition-all duration-300 w-full hover:border-nobel-gold/50"
            },
            "featureCard": {
                "classes": "bg-card p-8 rounded-xl border border-border shadow-sm"
            }
        },
        "navigation": {
            "container": "fixed top-0 left-0 right-0 z-50 transition-all duration-300",
            "scrolled": "bg-background/90 backdrop-blur-md shadow-sm py-4",
            "transparent": "bg-transparent py-6",
            "logo": "w-8 h-8 bg-nobel-gold rounded-full flex items-center justify-center text-white font-serif font-bold text-xl shadow-sm"
        },
        "buttons": {
            "primary": "group flex flex-col items-center gap-2 text-sm font-medium text-muted-foreground hover:text-foreground transition-colors"
        }
    },
    "layout": {
        "container": "container mx-auto px-6",
        "sectionSpacing": "py-24",
        "grid": "grid grid-cols-1 md:grid-cols-12 gap-12"
    }
}